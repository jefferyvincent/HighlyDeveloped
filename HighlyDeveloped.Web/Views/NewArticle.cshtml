@inherits Umbraco.Web.Mvc.UmbracoViewPage<ContentModels.NewsArticle>
@using ContentModels = Umbraco.Web.PublishedModels;
@using Umbraco.Core.PropertyEditors.ValueConverters;

@{
    Layout = "Master.cshtml";
    var imageCropper = Model.Value<ImageCropperValue>("articleImage");
    var imagUrl = imageCropper.Src + imageCropper.GetCropUrl("Main");
    var articleUrl = Model.Url(null, UrlMode.Absolute);
    var relatedArticles = Model.Value<IList<IPublishedContent>>("articleRelatedContent"); /// MultiNode Picker
}

@section head
{
    <meta property="og:title" content="@Model.Name" />
    <meta property="og:description" content="@Model.LeadIn" />
    <meta property="og:type" content="news.article" />
    <meta property="og:url" content="@articleUrl" />
    <meta property="og:image" content="@imagUrl" />
}

<article class="container">
    <header class="text-center">
        <div class="row">
            <div class="col">
                <h1 class="title-2 mt-5">@Model.Name</h1>
                <div class="meta mb-5">
                    <ul class="list-unstyled list-inline">
                        <li class="list-inline-item">
                            <i class="fa fa-user"></i> by @Model.Author
                        </li>
                        <li class="list-inline-item">
                            <i class="fa fa-calendar"></i>
                            @Model.PostDate.ToString("dd-MMM-yyy HH:mm")
                        </li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col">
                <div class="lead-in">
                    @Model.LeadIn
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col">
                <img src="@imageCropper" class="w-100" />
            </div>
        </div>
    </header>
    <div class="row">
        <div class="col">
            @Model.Article
        </div>
    </div>
    <footer class="border d-flex flex-column flex-md-row justifiy-content-between mt-5 mb-5">
        <div class="d-flex align-item-center px-4">
            <div class="d-flex flex-column">
                <div class="d-flex">
                    <span>
                        Author: <strong> @Model.Author</strong>
                    </span>
                </div>
                <div class="d-flex">
                    <span>
                        Categories: <strong> @string.Join(", ", Model.NewsCategory)</strong>
                    </span>
                </div>
                <div class="d-flex align-item-center px-4">
                    <span>
                        Share this article
                    </span>
                    <div class="btn--socialsquare btn btn-outline-primary m4">
                        <a class="ml-2 mr-2" href="https://twitter.com/intent/tweet?text=@Model.Name&amp;url=@articleUrl"><i class="fab fa-twitter"></i></a>
                    </div>
                </div>
            </div>
        </div>
    </footer>
</article>

<!-- Get Related Artices -->
@if(relatedArticles !=null && relatedArticles.Count > 0)
{
    <div class="container">
        <div class="row">
            <div class="col">
                <h2>Related Articles</h2>
                <div class="card-group">
                    @foreach (var item in relatedArticles)
                    {
                        <!--render related news articles -->
                        var image = item.Value<ImageCropperValue>("articleImage");
                        var thumbUrl = image.Src + image.GetCropUrl("Thumb");

                        <div class="card" style="width: 500px;">
                            <img class="card-img-top" src="@thumbUrl" alt="Card image cap">
                            <div class="card-body">
                                <h5 class="card-title">@item.Name</h5>
                                <p class="card-text">@item.Value("leadIn")</p>
                            </div>
                            <div class="card-footer d-flex justify-content-between">
                                <div><a href="@item.Url"> Read more</a></div>
                                <div class="social-icons text-muted">
                                    <a class="ms-2 me-2" href="https://twitter.com/intent/tweet?text=@item.Value("leadIn")&amp;url=@item.Url(null, UrlMode.Absolute)"><i class="fab fa-twitter"></i></a>
                                </div>
                                <div class="social-icons text-muted">
                                    <a class="ms-2 me-2" href="https://www.facebok.com/sharer.php?u=@item.Url(null, UrlMode.Absolute)"><i class="fab fa-facebook"></i></a>
                                </div>
                                <div class="social-icons text-muted">
                                    <a class="ms-2 me-2" href="https://www.linkedin.com/shareArticle?mini=true&amp;url=@item.Url(null, UrlMode.Absolute)"><i class="fab fa-linkedin"></i></a>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
}